                  <input type = "text" class= "form-control" id= "current_modal" placeholder = "Current Location">
                </div>
              </div>


              <div class="form-group">
                <label class= "ticket_destination" class = "col-lg-2 control-label">Destination:</label>
                <div class = "col-lg-5">

                  <input type = "text" class= "form-control" id= "ticket_destination" placeholder = "Destination">
                </div>
              </div>


              <div class="form-group">
                <label class= "class_modal" class = "col-lg-2 control-label">Class:</label>
                <div class = "col-lg-5">

                  <input type = "text" class= "form-control" id= "class_modal" placeholder = "Class">
                </div>
              </div>

              <div class="form-group">
                <label class= "reference_modal" class = "col-lg-2 control-label">Booking Reference:</label>
                <div class = "col-lg-5">

                  <input type = "text" class= "form-control" id= "reference_modal" placeholder = "e.g va321">
                </div>
              </div>

              <div class="form-group">
                <label class= "allowance_modal" class = "col-lg-2 control-label">Baggage Allowance:</label>
