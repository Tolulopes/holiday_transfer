<% content_for :body do %>
<body id= "package_index" >
  <% end %>
  <div class="listing">
    <h1>Package Listing</h1>

    <div class="package_listing">
      <table class= "center">
      <div class="package_table">
        <thead>
          <tr>
            <th>Airline</th>
            <th>Destination</th>
            <th>Description</th>
            <th>Price</th>
            <th>Attraction</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
          </div>
        </thead>
        <tbody>
          <% @packages.each do |package| %>
          <tr>
            <td><%= package.ticket.airline %></td>
            <td><%= link_to package.ticket.destination.name, package %></td>
            <td><%= package.description %></td>
            <td>Â£<%= package.ticket.price %></td>
            <% package.attractions.each do |attraction| %>
            <td><%= attraction.name %></td>
            <td><%= package.status %></td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>
  <!-- modal goes here -->

  <li><a href="#sellticket" data-toggle="modal">Sell Ticket</a></li>
  <div class="modal fade" id="sellticket" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <form class="form-horizontal">
          <div class="modal-header">
            <h4>Please Enter The Full Holiday Details </h4>
          </div>
          <div class= "modal-body">

            <div class="form-group">
              <select id="select_type" name="options">

                <option value="select">select</option>
                <option value="Destination">Destination</option>
                <option value="Package">Package</option>
                <option value="Hotel">Hotel</option>
                <option value="Attractions">Attractions</option>
                <option value="Ticket">Ticket</option>
              </select>
            </div>


            <div id="destination_fields">
              <h1>Destination:</h1>
              <div class="form-group">
                <label class="destination_name" class = "col-lg-2 control-label">Name:</label>
                <div class="col-lg-5">

                  <input type="text" class= "form-control" id= "destination_name" placeholder = "Name">
                </div>
              </div>
            </div>


            <div id="ticket_fields">
              <h1>Ticket:</h1>
              <div class="form-group">
                <label class= "airline_modal" class = "col-lg-2 control-label">Airline:</label>
                <div class = "col-lg-5">

                  <input type = "text" class= "form-control" id= "airline_modal" placeholder = "Airline">
                </div>
              </div>

              <div class="form-group">
                <label class= "current_modal" class = "col-lg-2 control-label">Current Location:</label>
