                <label class= "hotel_modal" class = "col-lg-2 control-label">Hotel:</label>
                <div class = "col-lg-5">

                  <input type = "text" class= "form-control" id= "hotel_modal" placeholder = "Hotel Name">
                </div>
              </div>

              <div class="form-group">
                <label class= "address_modal" class = "col-lg-2 control-label">Address:</label>
                <div class = "col-lg-5">

                  <input type = "text" class= "form-control" id= "address_modal" placeholder = "Hotel Address">
                </div>
              </div>

              <div class="form-group">
                <label class= "checkin_modal" class = "col-lg-2 control-label">Check In:</label>
                <div class = "col-lg-5">

                  <input type = "datetime-local" class= "form-control" id= "checkin_modal" placeholder = "Checkin Time">
                </div>
              </div>

              <div class="form-group">
                <label class= "checkout_modal" class = "col-lg-2 control-label">Check Out:</label>
                <div class = "col-lg-5">

                  <input type = "datetime-local" class= "form-control" id= "checkout_modal" placeholder = "Checkout Time">
                </div>
              </div>

              <div class="form-group">
                <label class= "star_modal" class = "col-lg-2 control-label">Stars:</label>
                <div class = "col-lg-5">

                  <input type = "integer" class= "form-control" id= "star_modal" placeholder = "Hotel Stars">
                </div>
              </div>
            </div>


            <div id="package_fields">
              <h1>Package:</h1>
              <div class="form-group">
                <label class= "description_modal" class = "col-lg-2 control-label">Description:</label>
                <div class = "col-lg-5">

                  <input type = "text" class= "form-control" id= "description_modal" placeholder = "Description">
                </div>
              </div>

              <div class="form-group">
                <label class= "price_modal" class = "col-lg-2 control-label">Price:</label>
                <div class = "col-lg-5">

                  <input type = "text" class= "form-control" id= "price_modal" placeholder = "Price">
                </div>
              </div>

            </div>
            <div class="modal-footer">
              <a class="btn btn-default" data-dismiss = "modal">Close</a>
              <a class="btn btn-primary" id='sell_ticket' data-dismiss = "modal">Sell</a>
            </div>
          </form>
        </div>

        <script>
          $(document).ready(function (){
            $("#select_type").change(function() {
              if ($(this).val() == "Destination") {
                $("#destination_fields").show();
                $("#package_fields").hide();
                $("#hotel_fields").hide();
                $("#ticket_fields").hide();
                $(".attraction_fields").hide();
              }else if($(this).val() == "Package"){
                $("#destination_fields").hide();
                $("#package_fields").show();
                $("#hotel_fields").hide();
                $("#ticket_fields").hide();
                $(".attraction_fields").hide();
              }else if($(this).val() == "Hotel"){
                $("#destination_fields").hide();
                $("#package_fields").hide();
                $("#hotel_fields").show();
                $("#ticket_fields").hide();
                $(".attraction_fields").hide();
              }else if($(this).val() == "Attractions"){
                $("#destination_fields").hide();
                $("#package_fields").hide();
                $("#hotel_fields").hide();
                $("#ticket_fields").hide();
                $(".attraction_fields").show();
              }else if($(this).val() == "Ticket"){
                $("#destination_fields").hide();
                $("#package_fields").hide();
                $("#hotel_fields").hide();
                $("#ticket_fields").show();
                $(".attraction_fields").hide();
              }
            });
});
</script>
