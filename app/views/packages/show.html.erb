<%= link_to 'Back', packages_path %></button>
<h1>Packages#show</h1>

<% content_for :body do %>
<body id ="pack_show">
<% end %>

<strong>Ticker Owner</strong>
  <%= @package.user.first_name %><br>

<strong>Package:</strong>
  <%= @package.description %><br>

<strong>Price:</strong>
  <%= @package.price %><br>



<strong>Attraction:</strong>
<ul>
  <% @package.attractions.each do |attraction| %>
    <li><%= attraction.name %>:  <%= attraction.description %></li>
  <% end %>
  </ul>
<strong>Map:</strong>
<p>Map with points of interest will go here </p>

<div class="map_1"
<div style='width: 800px;'>
  <div id="map" data-json=<%=raw @hash.to_json %> style='width: 800px; height: 400px;'></div>
</div>
</div>

<% if @package.status == "Available" %>
  <button><%= link_to 'Buy Package', ticket_path %></button>
<%end%>
<!-- // storing the marker info inside the html whenever the page is rendered, javascript is also calling the information from the html by data-json no need to set bounds because the map will zoom automatically when another marker is added. SO it sets the zoom based on the position of the first marker// -->
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    console.log(<%=raw @hash.to_json %>)
    markers = handler.addMarkers(<%=raw @hash.to_json %>)
    console.log(handler,markers)
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>