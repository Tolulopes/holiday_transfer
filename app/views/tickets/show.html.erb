<h1>ticket show / Ticket Information </h1>

<strong>Flying From:</strong>
<%= @ticket.current_location %><br>

<strong>Flying To:</strong>
<%= @ticket.destination.name %><br>

<strong>Class:</strong>
<%= @ticket.ticket_class %><br>

<strong>Flying With:</strong>
<%= @ticket.airline %><br>

<strong>Booking Reference:</strong>
<%= @ticket.booking_reference %><br>

<strong>Baggage Allowance:</strong>
<%= @ticket.baggage_allowance %>kg<br>

<strong>Departure Time:</strong>

<%= @ticket.departure_time %><br>

<strong>Arrival Time:</strong>

<%= @ticket.arrival_time %><br>

<strong>Round Trip:</strong>
<%= @ticket.round_trip %><br>

<strong>Hotel:</strong>
<%= @ticket.package.hotel.name %>

<strong>Price:</strong>
£<%= @ticket.price %>

<button>Buy Ticket</button>

<%= form_tag ticket_charges_path(@ticket) do %>
          <article>
            <label class="amount">
              <span>Destination: <%= @ticket.destination.name %></span>
            </label>
            <br>
            <label class="amount">
              <span>Amount: £<%= @ticket.package.price %></span>
            </label>
          </article>

          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-description="bla bla"

                  data-amount=<%= @ticket.package.price*100 %>
                  data-currency='gbp'>
                  </script>

        <% end %>

<li><a href="#buyticket" data-toggle="modal">Buy Ticket</a></li>
<div class="modal fade" id="buyticket" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <form class="form-horizontal">
        <div class="modal-header">
          <h4>Please can you confirm that you want to purchase this ticket</h4>
        </div>
        <div class= "modal-body">
        <h1>TEXT HERE</h1>

          <div class="modal fade">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Modal title</h4>
          </div>
        </div>
        <div class="modal-footer">
          <a class="btn btn-default" data-dismiss = "modal">Close</a>
          
        </div>
      </form>
    </div>
    <script>
      $(document).ready(function(){
        $('#myModal').on('shown.bs.modal', function () {
          $('#myInput').focus()
        })
      });
  </script>
