<h1>ticket show / Ticket Information </h1>

<strong>Flying From:</strong>
<%= @ticket.current_location %><br>

<strong>Flying To:</strong>
<%= @ticket.destination.name %><br>

<strong>Class:</strong>
<%= @ticket.ticket_class %><br>

<strong>Flying With:</strong>
<%= @ticket.airline %><br>

<strong>Booking Reference:</strong>
<%= @ticket.booking_reference %><br>

<strong>Baggage Allowance:</strong>
<%= @ticket.baggage_allowance %>kg<br>

<strong>Departure Time:</strong>

<%= @ticket.departure_time %><br>

<strong>Arrival Time:</strong>

<%= @ticket.arrival_time %><br>

<strong>Round Trip:</strong>
<%= @ticket.round_trip %><br>

<strong>Hotel:</strong>
<%= @ticket.package.hotel.name %>

<strong>Price:</strong>
£<%= @ticket.price %>

<button>Buy Ticket</button>

<%= link_to 'Buy Package', new_charge_path %></button>


<li><a href="#buyticket" data-toggle="modal">Buy Ticket</a></li>
<div class="modal fade" id="buyticket" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <form class="form-horizontal">
        <div class="modal-header">
          <h4>Please can you confirm that you want to purchase this ticket</h4>
        </div>
        <div class= "modal-body">
        <p>Destination: <%= @ticket.destination.name %></p>
        <p>Price: £<%= @ticket.package.price %></p>

          <div class="modal fade">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Modal title</h4>
          </div>
        </div>
        <div class="modal-footer">
          <a class="btn btn-default" data-dismiss = "modal">Close</a>
          <a class="btn btn-primary" id='sell_ticket' data-dismiss = "modal">Purchase</a>
        </div>
      </form>
    </div>
    <script>
      $(document).ready(function(){
        $('#myModal').on('shown.bs.modal', function () {
          $('#myInput').focus()
        })
      }
    });
  </script>
